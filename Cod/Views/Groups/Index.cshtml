@{
    ViewBag.Title = "Groups List";
}
<br />
<h3 class="text-center">@ViewBag.Title</h3>
<br />

@if (TempData.ContainsKey("message"))
{
    <h1>@ViewBag.message</h1>
}

<br />

<div class="align-items-center justify-content-center d-flex">
    <a class="btn btn-success" href="/Groups/New">Create group</a>
</div>

<br />

@foreach (Cod.Models.Group group in ViewBag.Groups)
{
    @Html.Label("GroupName", "Name of the group")
    <p>@group.Name</p>
    <a class="btn alert-success" href="/Groups/Show/@group.Id"> Show group </a>
    <a class="btn alert-success" href="/Groups/Edit/@group.Id"> Edit group </a>
    <br />
    <hr />
    <br />
}
<br />