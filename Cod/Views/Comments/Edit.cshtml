@model Cod.Models.Comment

@{
    ViewBag.Title = "Modifica comentariu";
}

<h1 class="text-center"> @ViewBag.Title </h1>
<hr />
<br />

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@using (Html.BeginForm(actionName: "Edit", controllerName: "Comments"))
{
    <div class="card p-2">
        <div class="text-center">
            @Html.Label("Content", "Continut comentariu")
        </div>

        @Html.TextBox("Content", null, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Content, null, new { @class = "text-danger" })
    </div>
    <br />

    <div class="d-flex justify-content-center flex-row m-2 mt-0">
        <button class="btn btn-success" type="submit"><i class="bi bi-pencil"></i> Modifica Comentariu</button>
    </div>
}