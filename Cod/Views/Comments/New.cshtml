@model Cod.Models.Comment

@{
    ViewBag.Title = "Adauga grup";
}

<h2 class="text-center"> @ViewBag.Title </h2>
<hr/>

<br/>
@Html.ValidationSummary(false, "", new { @class = "text-danger" })
@using (Html.BeginForm(actionName: "New", controllerName: "Comments", method: FormMethod.Post))
{
    <div class="card p-2">
        <div class="text-center">
            @Html.Label("Content", "Continut comentariu")
        </div>

        @Html.TextBox("Content", null, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Content, null, new { @class = "text-danger" })
    </div>
    <br/>

    <div class="d-flex justify-content-center flex-row m-2 mt-0">
        <button class="btn btn-success" type="submit">Adauga Comentariu</button>
    </div>
}
